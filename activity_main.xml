<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.strykeforce.filewritersample.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/textView" />

    <Button
        android:text="FILE MAKING WIZARDRY TO USB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:id="@+id/usbButton"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="FILE MAKING WIZARDRY TO INTERNAL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usbButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:id="@+id/internal"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usbButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:id="@+id/usbCountView"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/internal"
        android:layout_alignStart="@+id/usbCountView"
        android:layout_marginTop="23dp"
        android:id="@+id/internalCountView"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />
</RelativeLayout>
